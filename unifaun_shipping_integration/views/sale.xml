<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="sale_order_unifaun_pickup_location" model="ir.ui.view">
            <field name="name">Unifaun Pickup Location</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header>
                    <button type="object" name="get_uni_pickup_location" string="Unifaun Pickup Location" attrs="{'invisible': [('unifaun_pickup_location_flag', '=', False)]}" />
                </header>
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="unifaun_pickup_location_flag" invisible="1" />
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <notebook string="Unifaun Pickup Location" name="unifaun_pickup_location"  attrs="{'invisible': [('unifaun_pickup_location_flag', '=', False)]}">
                        <page>
                                <field name="unifaun_location_ids"
                                       readonly="1" widget="one2many" mode="tree">
                                    <tree>
                                        <button type="object" name="set_location"  string="SELECT" class="btn btn-success"/>
                                        <field name="shipping_provider"/>
                                        <field name="carrier"/>
                                        <field name="suboption_id" invisible="True"/>
                                        <field name="price"/>
                                        <field name="agent_name"/>
                                        <field name="agent_address1"/>
                                        <field name="agent_address2"/>
                                        <field name="agent_city"/>
                                        <field name="agent_zipCode"/>
                                        <field name="agent_state"/>
                                        <field name="agent_country"/>
                                        <field name="agent_phone"/>
                                        <field name="agent_email"/>
                                    </tree>
                                </field>
                            <group>
                                <field name="unifaun_location_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>