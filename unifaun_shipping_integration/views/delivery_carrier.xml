<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="unifaun_delivery_carrier_form_view" model="ir.ui.view">
            <field name="name">Unifaun Delivery Carrier</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='destination']" position='before'>
                    <page string="Unifaun" name="unifaun_configuration"
                    attrs="{'invisible': [('delivery_type', '!=', 'unifaun')]}">
                        <group attrs="{'required':[('delivery_type', '=', 'unifaun')]}">
                            <group>
                                <field name="company_id" />
                                <field name="create_shipment_pl_flag"  widget="boolean_toggle"/>
                                <field name="unifaun_checkout_id" attrs="{'invisible':[('create_shipment_pl_flag', '=', False)], 'required':[('create_shipment_pl_flag', '=', True)]}" />
                                <field name="carrier_delivery_option_id" attrs="{'invisible':[('create_shipment_pl_flag', '=', False)], 'required':[('create_shipment_pl_flag', '=', True)]}" />
                                <field name="carrier_customer_number" />
                                <field name="carrier_partner_id" />
                                <field name="carrier_service_id" />
                                <field name="label_size" />
                                <field name="default_package_id" />
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>