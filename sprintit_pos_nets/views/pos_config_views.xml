<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_payment_nets" model="ir.ui.view">
        <field name="name">pos.config.form.payment.nets</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='payment_methods_new']" position="after">
                <div class="col-xs-12 col-lg-6 o_setting_box" id="nets_terminal_settings" attrs="{'invisible': [('nets_payment_active', '=', False)]}">
                    <div class="o_setting_right_pane">
                        <field name="nets_payment_active" invisible="True"/>
                        <label for="nets_terminal_id" string="Nets"/>
                        <div class="text-muted">
                            Nets Payment Terminal Id
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="nets_terminal_id" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
