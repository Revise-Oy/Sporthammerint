<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_payment_nets" model="ir.ui.view">
      <field name="name">pos.payment.method.form.payment.nets</field>
      <field name="model">pos.payment.method</field>
      <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field
                    name="nets_api_url"
                    attrs="{'invisible': [('use_payment_terminal', '!=', 'nets_cloud')], 'required': [('use_payment_terminal', '=', 'nets_cloud')]}"
                />
                <field
                    name="nets_username"
                    attrs="{'invisible': [('use_payment_terminal', '!=', 'nets_cloud')], 'required': [('use_payment_terminal', '=', 'nets_cloud')]}"
                />
                <field
                    name="nets_password"
                    attrs="{'invisible': [('use_payment_terminal', '!=', 'nets_cloud')], 'required': [('use_payment_terminal', '=', 'nets_cloud')]}"
                />
          </xpath>
      </field>
    </record>
</odoo>
