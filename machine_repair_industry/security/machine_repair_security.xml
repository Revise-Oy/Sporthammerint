<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">

    <record model="ir.module.category" id="module_category_machine_repair">
    	<field name="name">Repair Order</field>
        <field name="description">Helps you manage your Machine Repairing.</field>
        <field name="sequence">3</field>
    </record>

    <record id="group_machine_repair_service_manager" model="res.groups">
        <field name="name">Service Manager</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_machine_repair"/>
    </record>


    <record id="group_machine_repair_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_machine_repair"/>
    </record>

    <record id="group_machine_repair_head_technician" model="res.groups">
        <field name="name">Head Technician</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('group_machine_repair_technician'))]"/>
        <field name="category_id" ref="module_category_machine_repair"/>
    </record>


    <record id="group_machine_repair_directeur_commercial" model="res.groups">
        <field name="name">Directeur Commercial</field>
        <field name="category_id" ref="module_category_machine_repair"/>
        <field name="implied_ids" eval="[(4, ref('group_machine_repair_service_manager')),(4, ref('sales_team.group_sale_manager')),(4, ref('stock.group_stock_manager')),(4, ref('purchase.group_purchase_manager')),(4, ref('account.group_account_manager'))]"/>
    </record>
    
    
    <!-- Rules -->
    <record id="machine_repair_rule_user" model="ir.rule">
        <field name="name">Repair Order Technician</field>
        <field name="model_id" ref="model_machine_repair"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('machine_repair_industry.group_machine_repair_technician'))]"/>
    </record>

	<record id="machine_repair_rule_user_diagnosis" model="ir.rule">
        <field name="name">Diagnosis Technician</field>
        <field name="model_id" ref="model_machine_diagnose"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('machine_repair_industry.group_machine_repair_technician'))]"/>
    </record>

	<record id="machine_repair_rule_user_work_order" model="ir.rule">
        <field name="name">Work Order Technician</field>
        <field name="model_id" ref="model_machine_workorder"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('user_id', '=', False),('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('machine_repair_industry.group_machine_repair_technician'))]"/>
    </record>

	<record id="machine_repair_rule_head_technician" model="ir.rule">
        <field name="name">Repair Order Head Technician</field>
        <field name="model_id" ref="model_machine_repair"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('machine_repair_industry.group_machine_repair_head_technician'))]"/>
    </record>

	<record id="machine_repair_head_technician_diagnosis" model="ir.rule">
        <field name="name">Diagnosis Head Technician</field>
        <field name="model_id" ref="model_machine_diagnose"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('machine_repair_industry.group_machine_repair_head_technician'))]"/>
    </record>

	<record id="machine_repair_rule_head_technician_work_order" model="ir.rule">
        <field name="name">Work Order Head Technician</field>
        <field name="model_id" ref="model_machine_workorder"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('machine_repair_industry.group_machine_repair_head_technician'))]"/>
    </record>
    
    

</data>
</odoo>

