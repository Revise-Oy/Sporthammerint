<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--Machine Diagnose Form View-->        

        <record id="view_machine_diagnose_form" model="ir.ui.view">
            <field name="name">machine.diagnose.form</field>
            <field name="model">machine.diagnose</field>
            <field name="arch" type="xml">
                <form string="Machine Diagnosis" create="false">
                    <header>
                        <button name="action_create_quotation" string="Create Quotation" type="object" class="oe_highlight" style="float:left;" states="in_progress"/>
                        <button name="%(action_machine_diagnose_assign_to_technician)d"  string="Assign to Technician" states="draft" type="action" class="oe_highlight" style="float:left;" groups="machine_repair_industry.group_machine_repair_head_technician,machine_repair_industry.group_machine_repair_directeur_commercial"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet string="Machine Diagnosis">
                    
                      <div class="oe_button_box" name="button_box">
                     <button type="object"
                        name="button_view_workorder"
                        class="oe_stat_button"
                        icon="fa-wrench"
                        attrs="{'invisible': [('workorder_count', '=', 0)]}" groups="base.group_user">
                        <field name="workorder_count" widget="statinfo" string="Work Order"/>
                    </button>
                        
                        
              		<button type="object"
                        name="button_view_repair"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('machine_repair_count', '=', 0)]}" groups="base.group_user">
                        <field name="machine_repair_count" widget="statinfo" string="Repair Order"/>
                    </button>
              
              	<button type="object"
                        name="button_view_quotation"
                        class="oe_stat_button"
                        icon="fa-usd"
                        attrs="{'invisible': [('quotation_count', '=', 0)]}" groups="base.group_user">
                        <field name="quotation_count" widget="statinfo" string="Quotations"/>
                    </button>
              
           
              	<button type="object"
                        name="button_view_saleorder"
                        class="oe_stat_button"
                        icon="fa-usd"
                        attrs="{'invisible': [('saleorder_count', '=', 0)]}" groups="base.group_user">
                        <field name="saleorder_count" widget="statinfo" string="Sales Orders"/>
                    </button>
              
           
           
              	<button type="object"
                        name="button_view_invoice"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('inv_count', '=', 0)]}" groups="base.group_user">
                        <field name="inv_count" widget="statinfo" string="Invoices"/>
                    </button>
                    
                    
                    </div>
                    
                    
                    
                    
                    
                    
                    
                    
                        <div class="oe_title oe_left">
                            <h1>
                                <field name="service_rec_no"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="True"/>
                                <field name="user_id" readonly="True"/>
                            </group>
                            <group>
                                <field name="priority" widget="priority" readonly="True"/>
                                <field name="receipt_date" readonly="True"/>
                                <field name="machine_repair_id" invisible='True'/>
                                <field name="sale_order_id" invisible='True'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="General">
                                <group string="Client Info">
                                    <group>
                                        <field name="client_id" context="{'show_address': 1}" options='{"always_reload": True}' readonly="True"/>
                                        <field name="contact_name" readonly="True"/>
                                    </group>
                                    <group>
                                        <field name="client_phone" readonly="True"/>
                                        <field name="client_mobile" readonly="True"/>
                                        <field name="client_email" widget="email" readonly="True"/>
                                        <field name="phone" readonly="True"/>
                                    </group>
                                    
                                </group>
                                <separator string="Machine Info"/>
                                <field name="machine_repair_line" context="{'diagnose_id': active_id, 'active_model': 'machine.diagnose'}" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>                    
                </form>
            </field>
        </record>
        
<!--Machine Diagnose Tree View-->

        <record id="view_machine_diagnose_tree" model="ir.ui.view">
            <field name="name">machine.diagnose.tree</field>
            <field name="model">machine.diagnose</field>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree string="Machine Diagnosis" create="false">
                    <field name="service_rec_no"/>
                    <field name="name" string="Subject"/>
                    
                    <field name="client_id"/>
                    <field name="receipt_date"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_machine_diagnose_filter" model="ir.ui.view">
            <field name="name">machine.diagnose.list.select</field>
            <field name="model">machine.diagnose</field>
            <field name="arch" type="xml">
                <search string="Search Machine Diagnoses">
                    <field name="service_rec_no"/>
                    <field name="name" string="Diagnose" />
                    <field name="client_id" operator="child_of"/>
                    <field name="machine_repair_id"/>
                    <separator/>
               </search>
            </field>
        </record>

        
<!--Machine Diagnose Action-->
        
        <record model="ir.actions.act_window" id="action_machine_diagnose_tree_view">
            <field name="name">Machine Diagnosis</field>
            <field name="res_model">machine.diagnose</field>
            
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_machine_diagnose_filter"/>
            <field name="view_id" ref="view_machine_diagnose_tree"/>
        </record>
        
<!--Machine Diagnose Menuitems-->        
        
      
        <menuitem name="Machine Diagnosis" groups="machine_repair_industry.group_machine_repair_directeur_commercial,machine_repair_industry.group_machine_repair_head_technician" parent="menu_machine_repair" id="menu_machine_diagnosis_submenu" sequence="7" action="action_machine_diagnose_tree_view"/>
        
    </data>
</odoo>        
