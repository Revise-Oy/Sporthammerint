<odoo>
    <data>

        <record id="view_klaviyo_credential_details" model="ir.ui.view">
            <field name="name">klaviyo Credential Details</field>
            <field name="model">klaviyo.credential.details</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="klaviyo Credential Details">
                    <field name="name"/>
                    <field name="klaviyo_api_key"/>
                </tree>
            </field>
        </record>
        <record id="view_form_klaviyo_credential_details" model="ir.ui.view">
            <field name="name">klaviyo Credential Details</field>
            <field name="model">klaviyo.credential.details</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="klaviyo Credential Details">
                    <header>
                        <button string="Import Lists" name="import_lists_from_klavio"
                                class="oe_highlight"
                                type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="klaviyo_api_key"/>
                                <field name="klaviyo_api_url" widget="url"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_klaviyo_credential_details" model="ir.actions.act_window">
            <field name="name">klaviyo Credential Details</field>
            <field name="res_model">klaviyo.credential.details</field>
            <field name='view_mode'>tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a klaviyo Credential Details.
                </p>
            </field>
        </record>

        <menuitem name="klaviyo Integration" id="klaviyo_integration"
                  parent="mass_mailing.mass_mailing_menu_root" sequence="5"/>
        <menuitem name="klaviyo Credential Details" id="menu_klaviyo_credential_details"
                  parent="klaviyo_integration" action="action_klaviyo_credential_details"
                  sequence="3"/>


    </data>
</odoo>

